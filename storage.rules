
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             request.auth.token.email == 'bouazzasalah120120@gmail.com';
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    // Factory images
    match /factories/{factoryId}/{allPaths=**} {
      allow read: if true; // public read
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }
    
    // User avatars
    match /users/{userId}/avatar/{fileName} {
      allow read: if true; // public read
      allow write: if (isSignedIn() && request.auth.uid == userId && isValidImage()) 
                      || isAdmin();
      allow delete: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
    }
    
    // Blog images
    match /blog/{postId}/{allPaths=**} {
      allow read: if true; // public read
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }
  }
}
